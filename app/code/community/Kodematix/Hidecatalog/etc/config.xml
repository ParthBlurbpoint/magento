<config>
    <modules>
        <Kodematix_Hidecatalog>
            <version>0.3.6</version>
        </Kodematix_Hidecatalog>
    </modules>
    <global>
        <blocks>
            <kodematix_hidecatalog>
                <class>Kodematix_Hidecatalog_Block</class>
            </kodematix_hidecatalog>
        </blocks>
        <models>
            <kodematix_hidecatalog>
                <class>Kodematix_Hidecatalog_Model</class>
                <resourceModel>kodematix_hidecatalog_resource</resourceModel>
            </kodematix_hidecatalog>
            <kodematix_hidecatalog_resource>
                <class>Kodematix_Hidecatalog_Model_Resource</class>
                <entities>
                    <product_index>
                        <table>hidecatalog_product_idx</table>
                    </product_index>
                    <category_index>
                        <table>hidecatalog_category_idx</table>
                    </category_index>
                </entities>
            </kodematix_hidecatalog_resource>
            <!-- rewrite the category flat resource model to filter the flat catalog queries -->
            <catalog_resource>
                <rewrite>
                    <category_flat>Kodematix_Hidecatalog_Model_Catalog_Resource_Category_Flat</category_flat>
                </rewrite>
            </catalog_resource>
            <!-- rewrite the catalogseach fulltext collection to add the filter to the getSelectCountSql() method -->
            <catalogsearch_resource>
                <rewrite>
                    <fulltext_collection>Kodematix_Hidecatalog_Model_CatalogSearch_Resource_Fulltext_Collection</fulltext_collection>
                </rewrite>
            </catalogsearch_resource>
            <!-- rewrite the wishlist item collection to add the filter (by setting the event prefix and object) -->
            <wishlist_resource>
                <rewrite>
                    <item_collection>Kodematix_Hidecatalog_Model_Wishlist_Resource_Item_Collection</item_collection>
                </rewrite>
            </wishlist_resource>
            <sitemap_resource>
                <rewrite>
                    <catalog_category>Kodematix_Hidecatalog_Model_Sitemap_Resource_Catalog_Category</catalog_category>
                    <catalog_product>Kodematix_Hidecatalog_Model_Sitemap_Resource_Catalog_Product</catalog_product>
                </rewrite>
            </sitemap_resource>
        </models>
        <helpers>
            <kodematix_hidecatalog>
                <class>Kodematix_Hidecatalog_Helper</class>
            </kodematix_hidecatalog>
        </helpers>
        <resources>
            <kodematix_hidecatalog_setup>
                <setup>
                    <module>Kodematix_Hidecatalog</module>
                    <class>Kodematix_Hidecatalog_Model_Resource_Setup</class>
                </setup>
            </kodematix_hidecatalog_setup>
        </resources>
        <index>
            <indexer>
                <!-- The code is limited to 30 characters, that is why I leave out the namespace prefix here -->
                <hidecatalog_product>
                    <model>kodematix_hidecatalog/indexer_product</model>
                </hidecatalog_product>
                <hidecatalog_category>
                    <model>kodematix_hidecatalog/indexer_category</model>
                </hidecatalog_category>
            </indexer>
        </index>
        <kodematix_hidecatalog>
            <disabled_on_routes>
                <api/>
                <paypal/>
                <paypaluk/>
                <authorizenet/>
                <buckaroo3extended/>
            </disabled_on_routes>
        </kodematix_hidecatalog>
        <events>
            <controller_front_init_before>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <class>kodematix_hidecatalog/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </kodematix_hidecatalog>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <events>
            <catalog_product_collection_load_before>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>catalogProductCollectionLoadBefore</method>
                    </kodematix_hidecatalog>
                </observers>
            </catalog_product_collection_load_before>
            
            <!-- fix for https://github.com/Vinai/hidecatalog/issues/76 -->
            <!-- still need to add regression test -->
            <catalog_product_collection_apply_limitations_after>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>catalogProductCollectionLoadBefore</method>
                    </kodematix_hidecatalog>
                </observers>
            </catalog_product_collection_apply_limitations_after>
            
            <catalog_category_collection_load_before>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>catalogCategoryCollectionLoadBefore</method>
                    </kodematix_hidecatalog>
                </observers>
            </catalog_category_collection_load_before>
            <catalog_product_load_after>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>catalogProductLoadAfter</method>
                    </kodematix_hidecatalog>
                </observers>
            </catalog_product_load_after>
            <catalog_category_load_after>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>catalogCategoryLoadAfter</method>
                    </kodematix_hidecatalog>
                </observers>
            </catalog_category_load_after>
            <catalog_product_collection_before_add_count_to_categories>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>catalogProductCollectionBeforeAddCountToCategories</method>
                    </kodematix_hidecatalog>
                </observers>
            </catalog_product_collection_before_add_count_to_categories>
            <sales_quote_merge_before>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>salesQuoteMergeBefore</method>
                    </kodematix_hidecatalog>
                </observers>
            </sales_quote_merge_before>
            <wishlist_item_collection_load_before>
                <observers>
                    <kodematix_hidecatalog>
                        <type>singleton</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>wishlistItemCollectionLoadBefore</method>
                    </kodematix_hidecatalog>
                </observers>
            </wishlist_item_collection_load_before>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <catalog_category_save_after>
                <observers>
                    <kodematix_hidecatalog>
                        <type>model</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>catalogCategorySaveAfter</method>
                    </kodematix_hidecatalog>
                </observers>
            </catalog_category_save_after>
            <customer_group_save_after>
                <observers>
                    <kodematix_hidecatalog>
                        <type>model</type>
                        <model>kodematix_hidecatalog/observer</model>
                        <method>customerGroupSaveAfter</method>
                    </kodematix_hidecatalog>
                </observers>
            </customer_group_save_after>
            <controller_action_predispatch_adminhtml_catalog_product_edit>
                <observers>
                    <kodematix_hidecatalog>
                        <type>model</type>
                        <class>kodematix_hidecatalog/observer</class>
                        <method>controllerActionPredispatchAdminhtmlCatalogProductEdit</method>
                    </kodematix_hidecatalog>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_edit>
            <controller_action_predispatch_adminhtml_catalog_category_edit>
                <observers>
                    <kodematix_hidecatalog>
                        <type>model</type>
                        <class>kodematix_hidecatalog/observer</class>
                        <method>controllerActionPredispatchAdminhtmlCatalogCategoryEdit</method>
                    </kodematix_hidecatalog>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_category_edit>
        </events>
        <translate>
            <modules>
                <Kodematix_Hidecatalog>
                    <files>
                        <default>Kodematix_Hidecatalog.csv</default>
                    </files>
                </Kodematix_Hidecatalog>
            </modules>
        </translate>
        <layout>
            <updates>
                <kodematix_hidecatalog>
                    <file>kodematix/hidecatalog.xml</file>
                </kodematix_hidecatalog>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Kodematix_Hidecatalog before="Mage_Adminhtml">Kodematix_Hidecatalog_Adminhtml</Kodematix_Hidecatalog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <kodematix_hidecatalog>
            <general>
                <is_active>1</is_active>
                <product_mode>show</product_mode>
                <product_default_show>-1</product_default_show>
                <product_default_hide>-1</product_default_hide>
                <category_mode>show</category_mode>
                <category_default_show>-1</category_default_show>
                <category_default_hide>-1</category_default_hide>
                <auto_refresh_block_cache>0</auto_refresh_block_cache>
                <entity_hidden_behaviour_guest>404</entity_hidden_behaviour_guest>
                <entity_hidden_behaviour_customer>404</entity_hidden_behaviour_customer>
                <entity_hidden_redirect_guest>customer/account/login</entity_hidden_redirect_guest>
                <entity_hidden_redirect_customer>cms</entity_hidden_redirect_customer>
                <display_entity_hidden_msg>0</display_entity_hidden_msg>
                <entity_hidden_msg_guest>Please register an account and log in.</entity_hidden_msg_guest>
                <entity_hidden_msg_customer>Please contact us to request further access privileges.</entity_hidden_msg_customer>
                <show_multiselect_field>1</show_multiselect_field>
            </general>
        </kodematix_hidecatalog>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Kodematix_Hidecatalog/>
            </modules>
        </suite>
    </phpunit>
</config>
